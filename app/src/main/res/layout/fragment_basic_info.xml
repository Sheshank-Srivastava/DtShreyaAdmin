    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/small_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content">
