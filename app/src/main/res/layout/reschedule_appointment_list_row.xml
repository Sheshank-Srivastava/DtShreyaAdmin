<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="20dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/profileLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:textColor="@color/textColorDark"
            android:padding="@dimen/small_padding"
            android:id="@+id/clientName"
            android:layout_marginLeft="@dimen/fab_margin"
            android:text="Mr. Akshit Tyagi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_tiny"
            android:padding="@dimen/small_padding"
            android:id="@+id/daysLeft"
            android:text="4 days left"/>
    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:layout_gravity="center"
                        android:text="Appointment On"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="0.2"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_very_small"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/previousDateTime"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:text="10/06/2018 - 9:30 P.M."/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:layout_gravity="center"
                        android:text="Requested"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/requestedDateTime"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:text="10/06/2018 - 9:30 P.M."/>
                </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/layout_very_small_margin"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:background="@color/grey_3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/layout_small_margin"
                        android:id="@+id/decline"
                        android:focusable="false"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="false"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="match_parent"
                        android:tint="@color/red_700"
                        android:src="@drawable/ic_close"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:textColor="@color/grey_900"
                        android:padding="@dimen/medium_padding"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:layout_gravity="center"
                        android:text="Decline"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/accept"
                        android:focusable="false"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="false"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:tint="@color/green_500"
                            android:src="@drawable/ic_tick"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:textColor="@color/grey_900"
                            android:padding="@dimen/medium_padding"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center"
                            android:text="Accept"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/layout_small_margin"
                        android:id="@+id/chat"
                        android:descendantFocusability="blocksDescendants"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/ic_chat_line"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:textColor="@color/grey_900"
                            android:padding="@dimen/medium_padding"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="center"
                            android:text="Chat"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>