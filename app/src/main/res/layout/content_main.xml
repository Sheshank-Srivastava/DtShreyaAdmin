        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat"
                android:id="@+id/appointmentImg"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="@dimen/medium_padding"
                android:paddingTop="@dimen/medium_padding"
                android:tint="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/appointmentImg"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="10"
                android:gravity="center"
                android:background="@drawable/notification_indicator"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="@dimen/small_padding"-->
                <!--android:textSize="@dimen/text_tiny"-->
                <!--android:text="Appointment"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="center"-->
                <!--/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat"
                android:id="@+id/HealthReadImg"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="@dimen/medium_padding"
                android:paddingTop="@dimen/medium_padding"
                android:tint="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/HealthReadImg"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="10"
                android:gravity="center"
                android:background="@drawable/notification_indicator"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="@dimen/small_padding"-->
                <!--android:textSize="@dimen/text_tiny"-->
                <!--android:text="Health Read"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="center"-->
                <!--/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat"
                android:id="@+id/DietRecordImg"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="@dimen/medium_padding"
                android:paddingTop="@dimen/medium_padding"
                android:tint="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@id/DietRecordImg"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="10"
                android:gravity="center"
                android:background="@drawable/notification_indicator"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="@dimen/small_padding"-->
