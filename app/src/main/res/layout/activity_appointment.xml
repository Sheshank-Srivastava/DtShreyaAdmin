<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.dietitianshreya.dtshreyaadmin.BookAppointment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_large"
        android:padding="@dimen/medium_padding"
        android:fontFamily="serif"
        android:text="Book an Appointment"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/medium_padding"
        android:layout_marginTop="@dimen/layout_very_small_margin"
        android:paddingLeft="@dimen/medium_padding"
        android:layout_marginLeft="@dimen/layout_very_small_margin"
        android:paddingRight="@dimen/medium_padding"
        android:layout_marginRight="@dimen/layout_very_small_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:textColor="@color/colorAccent"
            android:text="Appointment Type"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/appointmentTypeSpinner"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/medium_padding"
        android:layout_marginLeft="@dimen/layout_very_small_margin"
        android:paddingRight="@dimen/medium_padding"
        android:layout_marginRight="@dimen/layout_very_small_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:textColor="@color/colorAccent"
            android:text="Client Name"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:hint="Select a client"
            android:textSize="@dimen/text_small"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:id="@+id/clientEdit"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/medium_padding"
        android:layout_marginLeft="@dimen/layout_very_small_margin"
        android:paddingRight="@dimen/medium_padding"
        android:layout_marginRight="@dimen/layout_very_small_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:textColor="@color/colorAccent"
            android:text="Appointment Date"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:hint="Select a date"
            android:textSize="@dimen/text_small"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:id="@+id/appointmentDateEdit"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/medium_padding"
        android:layout_marginLeft="@dimen/layout_very_small_margin"
        android:paddingRight="@dimen/medium_padding"
        android:layout_marginRight="@dimen/layout_very_small_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:textColor="@color/colorAccent"
            android:text="Appointment Time"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:hint="Select time"
            android:textSize="@dimen/text_small"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:id="@+id/appointmentTimeEdit"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_background"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_medium_margin"
        android:id="@+id/book"
        android:textColor="@color/textColorLight"
        android:text="Book Appointment"/>



</LinearLayout>
