<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Date"
        android:id="@+id/date"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Weight"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:id="@+id/weight"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Height"
        android:id="@+id/height"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Subcutaneous Fat"
        android:id="@+id/sfat"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Visceral Fat"
        android:id="@+id/vfat"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="BMI"
        android:id="@+id/bmi"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Muscle"
        android:id="@+id/muscle"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Body Age"
        android:id="@+id/bodyage"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Resting Metabolism"
        android:id="@+id/resMeta"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_small"
        android:padding="@dimen/medium_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>