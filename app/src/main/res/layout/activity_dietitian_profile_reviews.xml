<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.dietitianshreya.eatrightdietadmin.DietitianProfileReviews">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/avtar"
        app:civ_border="true"
        android:layout_gravity="center_horizontal"
        app:civ_border_width="2dp"
        />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_medium"
        android:padding="@dimen/small_padding"
        android:id="@+id/name"
        android:text="Dt. Shreya"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="5"
        android:id="@+id/ratingBar"
        android:stepSize="0.5"
        android:secondaryProgressTint="@color/yellow_700"
        android:layout_gravity="center"
        android:progressTint="@color/yellow_700"
        android:progressBackgroundTint="@color/yellow_200"
        android:rating="0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:text="Average Ratings : "
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_small"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_padding"
            android:layout_marginTop="@dimen/layout_very_small_margin"
            android:text="0"
            android:id="@+id/avgRating"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_small"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:layout_margin="@dimen/layout_very_small_margin"
        android:text="Reviews : "
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_medium"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/re">

    </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
</ScrollView>
