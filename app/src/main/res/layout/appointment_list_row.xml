<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/layout_small_margin"
        android:layout_marginLeft="@dimen/layout_small_margin"
        android:layout_marginRight="@dimen/layout_small_margin"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/small_padding"
                android:layout_marginLeft="@dimen/fab_margin"
                android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/text_small"
                        android:text="Akshit Tyagi"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/title"
                        android:paddingLeft="@dimen/small_padding"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_tiny"
                        android:text="3 days left"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/daysLeft"
                        android:paddingLeft="@dimen/small_padding"
                        />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_very_small"
                    android:textColor="@color/textColorDark"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:padding="@dimen/small_padding"
                    android:id="@+id/time"
                    android:text="9:30 A.M."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_tiny"
                android:id="@+id/place"
                android:text="In Person"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/optionsMenu"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:src="@drawable/ic_popup_indicator"/>
            </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
