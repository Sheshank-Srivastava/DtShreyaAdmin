<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="20dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/layout_small_margin"
            android:layout_marginLeft="@dimen/layout_small_margin"
            android:layout_marginRight="@dimen/layout_small_margin"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/textColorDark"
                        android:padding="@dimen/small_padding"
                        android:id="@+id/date"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:text="20/02/2018"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:layout_gravity="center"
                        android:text="Weight"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="0.2"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_very_small"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/weight"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:text="50kg"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:layout_gravity="center"
                        android:text="Fat"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/fat"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:text="10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:layout_gravity="center"
                        android:text="Water"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/water"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:text="60"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:layout_gravity="center"
                        android:text="Muscle"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/muscle"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:text="20"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:layout_gravity="center"
                        android:text="Bone"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/bone"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:text="25"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingBottom="@dimen/small_padding"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:layout_gravity="center"
                        android:text=""/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text=""/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_very_small"
                        android:text=""/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/layout_very_small_margin"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>